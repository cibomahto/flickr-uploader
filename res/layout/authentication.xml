
<LinearLayout android:id="@+id/LinearLayout01"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent" android:background="#0063C8">
	<TextView android:id="@+id/TextView01" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:textStyle="bold"
		android:typeface="sans" android:textSize="40sp" android:paddingBottom="40sp"
		android:gravity="center_horizontal" android:textColor="#ffffff"
		android:text="Flickr Uploader" android:paddingTop="10sp"></TextView>
	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_width="fill_parent" android:padding="2sp" android:background="#000000"
		android:layout_margin="5sp" android:layout_height="180sp">
		<LinearLayout android:id="@+id/LinearLayout03"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:background="#ffffff" android:padding="3sp">
			<TextView android:id="@+id/TextView02"
				android:layout_height="fill_parent"
				android:gravity="center_horizontal|center_vertical"
				android:layout_width="fill_parent" android:textSize="18sp" android:textColor="#000000" android:text="Checking credentials..."></TextView>
		</LinearLayout>
	</LinearLayout>
	<Button android:id="@+id/Button01" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:text="@string/settings_account_authorize"
		android:layout_marginLeft="3sp" android:layout_marginRight="3sp" android:textSize="18sp"></Button>
	<Button android:id="@+id/Button02" android:layout_height="wrap_content"
		android:text="@string/settings_defaults" android:layout_width="fill_parent"
		android:enabled="false"
		android:layout_marginLeft="3sp" android:layout_marginRight="3sp" android:textSize="18sp"></Button>

</LinearLayout>